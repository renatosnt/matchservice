generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String   @id @unique @db.Uuid
  username                 String   @unique
  realName                 String
  email                    String   @unique
  password                 String
  type                     String
  createdAt                DateTime @default(now())
  scheduledServices        String[] @db.Uuid
  serviceProviderProfileId String?  @db.Uuid
}

model ServiceProviderProfile {
  id              String   @id @unique @db.Uuid
  userId          String   @unique @db.Uuid
  telephoneNumber String
  specialty       String
  averageRating   Float
  services        String[] @db.Uuid
  schedule        String[] @db.Uuid
}

model Service {
  id               String   @id @unique @db.Uuid
  title            String
  description      String
  viewCount        Int      @default(0)
  category         String
  locationState    String
  locationCity     String
  createdAt        DateTime @default(now())
  schedule         String[] @db.Uuid
  creatorProfileId String   @db.Uuid
  basePrice        String   @default("0")
  pictureLinks     String[] @default([])
}

model Scheduling {
  id                       String   @id @unique @db.Uuid
  serviceId                String   @db.Uuid
  scheduledDate            DateTime
  isCompleted              Boolean
  isCanceled               Boolean
  customerId               String   @db.Uuid
  rating                   Float    @default(0)
  serviceProviderProfileId String   @db.Uuid
}
